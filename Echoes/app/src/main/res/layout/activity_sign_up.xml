<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/myLayout2"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:background="@drawable/bg4"
    tools:context="com.example.cmput301f17t19.echoes.SignUpActivity"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />





    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        >



    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/create_profile_title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Create your account"
            android:textSize="25dp"
            android:textAlignment="center"
            app:layout_constraintRight_toRightOf="parent"
            />



        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user_profile_icon"
            app:civ_border_width="2dp"
            android:layout_gravity="center"
            app:civ_border_color="#FF000000"/>


        <TextView
            android:id="@+id/profile_picture_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="Profile Picture"
            />


        <EditText
            android:id="@+id/user_name"

            android:textColorHint="@color/white"
            android:textSize="18dp"
            android:backgroundTint="@color/white"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:ems="10"
            android:hint="Username: REQUIRED"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/user_email"

            android:textColorHint="@color/white"
            android:textSize="18dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/email_icon"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:ems="10"
            android:paddingStart="5dp"
            android:hint="Email: OPTIONAL"
            />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:drawableLeft="@drawable/phone_icon"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:textColorHint="@color/white"
            android:textSize="18dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:hint="Phone Number: OPTIONAL"
            />


        <EditText
            android:id="@+id/user_comment"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/white"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:hint="Say Something: OPTIONAL"
           />



        <Button
            android:id="@+id/signup"
            android:layout_width="300dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_gravity="center"
            android:background="@drawable/btn"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"
             />

    </LinearLayout>

    </ScrollView>

</LinearLayout>




